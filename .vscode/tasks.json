{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Git: Sync and Push (PowerShell)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "git add .; git commit -m \"Full update $(Get-Date -Format 'yyyy-MM-dd HH:mm:ss')\"; git push --force"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
