{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Git: Update Project",
            "type": "shell",
            "command": "git pull origin main && git add . && git commit -m \"Project update %date% %time%\" && git push origin main",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true,
                "showReuseMessage": false
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/d", "/c"]
                }
            }
        }
    ]
}