{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Git: Sync and Push",
            "type": "shell",
            "command": "git",
            "args": [
                "pull",
                "&&",
                "git",
                "add",
                ".",
                "&&",
                "git",
                "commit",
                "-m",
                "\"Update $(date /t) $(time /t)\"",
                "&&",
                "git",
                "push"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/d", "/c"]
                }
            }
        }
    ]
}